<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corner"

            android:scaleType="fitXY"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_user"
            android:text="Title"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:textSize="15dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_user"
            android:text="Order Time:" />
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="10dp"
            android:textColor="#E62B2B"
            android:layout_toRightOf="@+id/img_user"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>



        <TextView
            android:id="@+id/tvSalaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Price"
            android:textColor="#050505"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSalaryTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"

            android:text="Price"
            android:textColor="#47D84C"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Max Quantity: "
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ED2411" />

        <TextView
            android:id="@+id/img_addButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/tv_quantity"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Cancel Order"

            android:layout_marginBottom="5dp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>