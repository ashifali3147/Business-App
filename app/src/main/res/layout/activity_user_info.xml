<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo">
    <ImageView
        android:id="@+id/userPage_userIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/userPage_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="30dp"
        android:inputType="textPersonName"
        android:layout_below="@id/userPage_userIcon"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/userPage_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="30dp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/userPage_userName"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/userPage_btnGetData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>